    {
      "description": "Send logs from your game to the GD Remote app for real-time debugging and monitoring.",
      "fullName": "Logger",
      "functionType": "Action",
      "name": "Log",
      "sentence": "Log to Remote _PARAM1_ as _PARAM2_",
      "events": [
        {
          "type": "BuiltinCommonInstructions::JsCode",
          "inlineCode": [
            "let text = eventsFunctionContext.getArgument(\"text\");",
            "let type = eventsFunctionContext.getArgument(\"type\");",
            "let prefix = \"[GDevelop Remote] \";",
            "",
            "switch (type.toLowerCase()) {",
            "  case \"log\":",
            "    console.log(prefix + text);",
            "    break;",
            "  case \"info\":",
            "    console.info(prefix + text);",
            "    break;",
            "  case \"warn\":",
            "    console.warn(prefix + text);",
            "    break;",
            "  case \"error\":",
            "    console.error(prefix + text);",
            "    break;",
            "  case \"debug\":",
            "    console.debug(prefix + text);",
            "    break;",
            "  case \"alert\":",
            "    alert(prefix + text);",
            "    break;",
            "  default:",
            "    console.log(prefix + \"[Unknown type] \" + text);",
            "}"
          ],
          "parameterObjects": "",
          "useStrict": true,
          "eventsSheetExpanded": true
        }
      ],
      "parameters": [
        {
          "description": "The content you want to output (e.g., ‚ÄúInit done‚Äù)",
          "name": "text",
          "type": "string"
        },
        {
          "description": "The display method (e.g., log, error, alert)",
          "name": "type",
          "supplementaryInformation": "[\"log\",\"info\",\"warn\",\"error\",\"debug\",\"alert\"]",
          "type": "stringWithSelector"
        }
      ],
      "objectGroups": []
    }
